<div class="navbar-ftc">
  <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", height: 50 %>
    <% end %>


  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">
    <%= link_to "About", about_path, class: "navbar-link" %>
    <%= link_to "Contact", contact_path, class: "navbar-link" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-right hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars fa-2x dropdown-toggle navbar-item" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><%= link_to "About", about_path, class: "navbar-link" %></li>
        <li><%= link_to "Contact", contact_path, class: "navbar-link" %></li>
      </ul>
    </div>
  </div>

</div>

